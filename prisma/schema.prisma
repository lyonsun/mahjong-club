generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Player {
  id            String            @id @default(auto()) @map("_id") @db.ObjectId
  name          String            @unique
  rounds        GameRound[]
  inSessions    PlayerInSession[]
  PlayerInRound PlayerInRound[]
}

model GameSession {
  id      String            @id @default(auto()) @map("_id") @db.ObjectId
  date    DateTime
  rounds  GameRound[]
  players PlayerInSession[]
}

model GameRound {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  number        String
  winner        Player?         @relation(fields: [playerId], references: [id])
  session       GameSession     @relation(fields: [gameSessionId], references: [id])
  PlayerInRound PlayerInRound[]
  playerId      String?         @db.ObjectId
  gameSessionId String          @db.ObjectId
}

model PlayerInSession {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  session       GameSession @relation(fields: [gameSessionId], references: [id])
  player        Player      @relation(fields: [playerId], references: [id])
  gameSessionId String      @db.ObjectId
  playerId      String      @db.ObjectId
}

model PlayerInRound {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  GameRound   GameRound @relation(fields: [gameRoundId], references: [id])
  player      Player    @relation(fields: [playerId], references: [id])
  gameRoundId String    @db.ObjectId
  playerId    String    @db.ObjectId
}
