generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id            Int               @id @default(autoincrement())
  name          String
  rounds        GameRound[]
  inSessions    PlayerInSession[]
  PlayerInRound PlayerInRound[]
}

model GameSession {
  id      Int               @id @default(autoincrement())
  date    DateTime
  rounds  GameRound[]
  players PlayerInSession[]
}

model GameRound {
  id            Int             @id @default(autoincrement())
  number        Int
  gameSessionId Int
  playerId      Int?
  winner        Player?         @relation(fields: [playerId], references: [id])
  session       GameSession     @relation(fields: [gameSessionId], references: [id])
  PlayerInRound PlayerInRound[]
}

model PlayerInSession {
  id            Int         @id @default(autoincrement())
  playerId      Int
  gameSessionId Int
  session       GameSession @relation(fields: [gameSessionId], references: [id])
  player        Player      @relation(fields: [playerId], references: [id])
}

model PlayerInRound {
  id          Int       @id @default(autoincrement())
  playerId    Int
  gameRoundId Int
  GameRound   GameRound @relation(fields: [gameRoundId], references: [id])
  player      Player    @relation(fields: [playerId], references: [id])
}
